{
  "name": "ipabuyer-electron",
  "version": "2026.2.4",
  "description": "IPAbuyer Electron client",
  "author": "IPAbuyer",
  "repository": {
    "type": "git",
    "url": "https://github.com/ipabuyer/electron"
  },
  "private": true,
  "main": "main/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node ./node_modules/vite/bin/vite.js",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:wait": "wait-on http://localhost:5173 && npm run electron",
    "start": "concurrently -k -n \"renderer,electron\" -c \"cyan,green\" --success first \"npm:dev\" \"npm:electron:wait\"",
    "build:renderer": "cross-env NODE_ENV=production vite build",
    "build:app": "cross-env NODE_ENV=production BUILD_ARCH=x64 electron-builder --config electron-builder.config.cjs",
    "build:app:x64": "cross-env NODE_ENV=production BUILD_ARCH=x64 electron-builder --config electron-builder.config.cjs",
    "build:app:ARM64": "cross-env NODE_ENV=production BUILD_ARCH=arm64 electron-builder --config electron-builder.config.cjs",
    "build": "npm run build:renderer && npm run build:app"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-windows-store": "^2.1.0",
    "sql.js": "^1.13.0",
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^40.2.1",
    "electron-builder": "^26.4.0",
    "vite": "^5.2.9",
    "wait-on": "^7.2.0"
  },
  "build": "electron-builder.config.cjs"
}